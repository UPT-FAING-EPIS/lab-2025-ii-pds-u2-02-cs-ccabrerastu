{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "CustomerApp/CustomerApp.Domain",
          "files": [
            "CustomerApp.Domain.csproj"
          ]
        }
      ],
      "dest": "api/CustomerApp.Domain"
    },
    {
      "src": [
        {
          "src": "Notifications/Notifications.Domain",
          "files": [
            "Notifications.Domain.csproj"
          ]
        }
      ],
      "dest": "api/Notifications.Domain"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Customer & Notifications App",
      "_appTitle": "Customer & Notifications App",
      "_enableSearch": true,
      "pdf": true
    }
  }
}